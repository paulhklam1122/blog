<script>
  $('form').submit(function(){
    $(this).slideUp(1000).hide();
  });
</script>
<h1>Editing Comment</h1>

<%= @comment.errors.full_messages.join(", ") %>
<%= simple_form_for [@post, comment], remote: true do |f| %>
  <div class="content" >
    <%= f.input :body %>
    <%= f.button :submit, class: "btn btn-large btn-primary", remote: true %>
  </div>
<% end %>
