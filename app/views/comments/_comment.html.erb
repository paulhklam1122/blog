<script>
  $(document).ready(function(){
    $('.edit-comment').hide(0);
  });
</script>
<div id='<%= dom_id(comment) %>'>
<p>Created by: <%= comment.user.full_name if comment.user %></p>
<%= comment.body %>
<%= link_to "Edit", edit_post_comment_path(@post, comment), remote: true, class: "edit-button" %> |
<%= link_to "Delete", post_comment_path(@post, comment),
                          method: :delete,
                          remote: true,
                          data: {confirm: "Are you sure?"}%>

  <div class="edit-comment">
    <%= render "comments/edit", comment: comment, post: @post %>
  </div>
  <hr>
</div>
