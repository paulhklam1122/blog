<h1><%= @post.title.titleize %></h1>
<p>Created by: <%= @post.user.full_name if @post.user%></p>
<p>Tags: <%= @post.tags.map {|t| t.title.capitalize}.join(", ") %></p>
<p><%= @post.body %></p>

<% if @post.favourited_by?(current_user) %>
  <%= link_to fa_icon("thumbs-up"), post_favourite_path(@post, @post.favourite_for(current_user)), method: :delete, class: "like-icon" %>
<% else %>
<%= link_to fa_icon("thumbs-o-up"), post_favourites_path(@post), method: :post, class: "like-icon" %>
<% end %>

<% if can? :manage, @post %>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post),
                      method: :delete,
                      data:   {confirm: "Are you sure you want to delete this post?"} %>
<% end %>

<h2>Create a Comment</h2>
<%= @comment.errors.full_messages.join(", ") %>
<%= form_for [@post, @comment] do |f| %>
<div>
  <%= f.text_area :body %>
</div>
<%= f.submit %>
<% end %>

<h2>Comments</h2>
<% @post.new_first_comments.each do |comment| %>
  <p>Created by: <%= comment.user.full_name if comment.user %></p>
  <%= comment.body %>
  <%= link_to "Edit", edit_post_comment_path(@post, comment) %>
  <%= link_to "Delete", post_comment_path(@post, comment),
                            method: :delete,
                            data: {confirm: "Are you sure?"}%>
<hr>
<% end %>
