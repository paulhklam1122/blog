<h1>New Post</h1>

<%= @post.errors.full_messages.join(", ") %>
<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.label :tag_ids %>
    <%= f.collection_check_boxes(:tag_ids, Tag.order(:title), :id, :title) %>
  </div>
  <div>
    <%= f.collection_select :category_id, Category.all, :id, :title %>
  </div>
  <%= f.submit %>
<% end %>
